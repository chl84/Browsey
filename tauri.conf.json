{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Browsey",
  "version": "0.4.4",
  "identifier": "com.browsey",
  "build": {
    "beforeDevCommand": "bash -lc 'cd \"$(git rev-parse --show-toplevel 2>/dev/null || pwd)\" && ./scripts/start-vite.sh'",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173/",
    "frontendDist": "dist"
  },
  "app": {
    "windows": [
      {
        "title": "Browsey",
        "create": false,
        "width": 1000,
        "height": 800,
        "minWidth": 300,
        "minHeight": 300,
        "theme": "Dark",
        "decorations": false,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["$CACHE/browsey/**", "/app/resources/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["rpm"],
    "icon": ["resources/icons/icon.png", "resources/icons/icon.ico"],
    "externalBin": [
      "resources/pdfium-linux-x64/lib/libpdfium.so"
    ],
    "resources": [
      "resources/**",
      "THIRD_PARTY_NOTICES"
    ]
  }
}
