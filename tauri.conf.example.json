{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Browsey",
  "version": "0.2.0",
  "identifier": "com.browsey",
  "build": {
    "beforeDevCommand": "bash -lc 'cd \"$(git rev-parse --show-toplevel 2>/dev/null || pwd)\" && ./scripts/start-vite.sh'",
    "beforeBuildCommand": "npm --prefix frontend run build",
    "devUrl": "http://localhost:5173/",
    "frontendDist": "dist"
  },
  "app": {
    "windows": [
      {
        "title": "Browsey",
        "width": 800,
        "height": 600,
        "theme": "Dark",
        "dragDropEnabled": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["rpm"],
    "icon": ["resources/icons/icon.png"]
  }
}
